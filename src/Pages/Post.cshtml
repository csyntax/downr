@page "{slug}"
@model PostModel

@using downr.Services.Posts

@inject IPostService postService

@{
    this.ViewData["Title"] = Model.Article.Title;

    var prevNext = this.postService.GetPreviousAndNextPosts(Model.Article.Slug);
}



<article>
    <header>
        <h1>@Model.Article.Title</h1>
        <div class="clearfix">
            <a asp-page="./Post" asp-route-slug="@Model.Article.Slug" class="btn btn-sm btn-secondary float-left">
                <i class="calendar outline icon"></i>
                @Model.Article.Date.ToLocalTime().ToString("d MMMM yyyy")
            </a>

            @foreach (var category in Model.Article.Categories)
            {
                <a asp-page="./Category" asp-route-name="@category" class="btn btn-sm btn-secondary float-right">
                    <i class="right chevron icon"></i> @category
                </a>
            }
        </div>
    </header>

    @Html.Raw(Model.Article.Content)

    <div class="clearfix">
        @if (prevNext.previous != null)
        {
            <a asp-page="./Post" asp-route-slug="@prevNext.previous.Slug" class="btn btn-secondary float-left">
                <i class="arrow left icon"></i>
                @prevNext.previous.Title
            </a>
        }

        @if (prevNext.next != null)
        {
            <a asp-page="./Post" asp-route-slug="@prevNext.next.Slug" class="btn btn-secondary float-right">
                @prevNext.next.Title
                <i class="arrow right icon"></i>
            </a>
        }
    </div>
</article>

@section scripts {
    <script>
        $(document).ready(() => {
            $('pre code').each((i, block) => hljs.highlightBlock(block));
        });
    </script>
}