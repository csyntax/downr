@using Microsoft.Extensions.Options

@inject IOptions<DownrOptions> downrOptions

<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>@ViewData["Title"] - @downrOptions.Value.Title</title>

        <meta name="description" content="@downrOptions.Value.Description">

        <link rel="stylesheet" href="~/libs/semantic/dist/semantic.min.css">
        <link rel="stylesheet" href="~/libs/highlightjs/styles/default.css">
        <link rel="stylesheet" href="~/css/site.css">
    </head>
    <body>
        <nav class="ui borderless menu fixed">
            <div class="ui container">
                <a href="/" class="header item">
                    <img class="logo" src="~/images/logo.svg">
                    <cache>@downrOptions.Value.Title</cache>
                </a>
                <a asp-page="./Index" class="item">Publications</a>

                @await Component.InvokeAsync("TagCloud")
            </div>
        </nav>

        <div class="ui main stackable grid container">
            <div class="twelve wide column">
                @RenderBody()
            </div>
            <div class="four wide column">
                <div class="ui card">
                    <div class="image">
                        <img src="~/images/man.svg">
                    </div>
                    <div class="content">
                        <h4 class="header">Ivan Ivanov</h4>

                        <a class="twitter-follow-button" href="https://twitter.com/csyntaxdev">
                            Follow @@csyntaxdev
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <footer class="ui olive vertical footer segment">
            <div class="ui center aligned container">
                (c) @DateTime.Now.Year Ivan Ivanov
            </div>            
        </footer>

        <script src="~/libs/jquery/dist/jquery.slim.min.js"></script>
        <script src="~/libs/semantic/dist/semantic.min.js"></script>
        <script src="~/libs/highlightjs/highlight.pack.js"></script>

        <script>
            $(document).ready(function () {
                $('pre code').each(function (i, block) {
                    hljs.highlightBlock(block);
                });
            });
        </script>

        <script>
            window.twttr = (function (d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0],
                    t = window.twttr || {};
                if (d.getElementById(id)) return t;
                js = d.createElement(s);
                js.id = id;
                js.src = "https://platform.twitter.com/widgets.js";
                fjs.parentNode.insertBefore(js, fjs);

                t._e = [];
                t.ready = function (f) {
                    t._e.push(f);
                };

                return t;
            }(document, "script", "twitter-wjs"));
        </script>

        @RenderSection("Scripts", required: false)
    </body>
</html>